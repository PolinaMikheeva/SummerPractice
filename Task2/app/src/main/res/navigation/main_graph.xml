<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.task2.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_mainFragment_to_petsFragment"
            app:destination="@id/petsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_mainFragment_to_snackFragment"
            app:destination="@id/snackFragment" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.task2.CalendarFragment"
        android:label="CalendarFragment" />
    <fragment
        android:id="@+id/petsFragment"
        android:name="com.example.task2.PetsFragment"
        android:label="PetsFragment" />
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.task2.PhotoFragment"
        android:label="PhotoFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.task2.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/snackFragment"
        android:name="com.example.task2.SnackFragment"
        android:label="SnackFragment" />
</navigation>